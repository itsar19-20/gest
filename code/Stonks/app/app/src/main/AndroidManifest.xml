<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rizzoli.fatturoio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalState"
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_today"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.FatturaActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.CercaScadenziario" />
        <activity android:name=".activity.MostraScadenziario" />
        <activity android:name=".activity.TestVolleyActivity" />
        <activity android:name=".activity.TestRetrofitActivity" />
    </application>

</manifest>