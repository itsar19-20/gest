<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titolo"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:background="#00000000"
        android:text="Fatturo.io"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="41dp"
        android:layout_height="47dp"
        android:onClick="@android:string/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/notifiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Notifiche"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/notificheVeloci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifiche Veloci"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifiche"
        app:layout_constraintVertical_bias="0.073" />

    <TextView
        android:id="@+id/suoneria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suoneria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificheVeloci"
        app:layout_constraintVertical_bias="0.081" />

    <Switch
        android:id="@+id/notificheSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toEndOf="@+id/notifiche"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.049" />

    <Switch
        android:id="@+id/notificheVeloceSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toEndOf="@+id/notificheVeloci"
        app:layout_constraintTop_toBottomOf="@+id/notificheSwitch"
        app:layout_constraintVertical_bias="0.061" />

    <Switch
        android:id="@+id/suoneriaSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginLeft="256dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/suoneria"
        app:layout_constraintTop_toBottomOf="@+id/notificheVeloceSwitch" />

    <TextView
        android:id="@+id/tonoSuoneria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="36dp"
        android:text="Tono Suoneria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suoneria" />

    <Spinner
        android:id="@+id/tonoSuoneriaSpinner"
        android:layout_width="131dp"
        android:layout_height="29dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/tonoSuoneria"
        app:layout_constraintTop_toBottomOf="@+id/suoneriaSwitch" />

    <TextView
        android:id="@+id/giorniPreavviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="36dp"
        android:text="Giorni Preavviso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tonoSuoneria" />

    <Spinner
        android:id="@+id/giorniPreavvisoSpinner"
        android:layout_width="67dp"
        android:layout_height="31dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/giorniPreavviso"
        app:layout_constraintTop_toBottomOf="@+id/tonoSuoneriaSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>